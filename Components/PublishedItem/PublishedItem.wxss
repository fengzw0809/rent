page{
  background-color: white;
}

.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 2rpx;
}

.wrapper{
  width: 100%;
  margin: auto;
  overflow: hidden;

}

.image-wrapper{
  float: left;
  width: 30%;
  margin: 4% 2%;
  border-radius: 5%; 
}

.info-wrapper{
  overflow: hidden;
  margin-top: 4%;
}

.info-wrapper text {
  display: block;
}

.house-name{
  font-size: 32rpx;
  font-weight: bold;
}

.house-name + view{
  margin-top: 4%;
}

.price{
  font-size: 25rpx;
}

.brief-info{
  font-size: 25rpx;
  padding-right: 1rem;
}

.grayLine{
  background: #E0E3DA;
  width: 100%;
  height: 1rpx;
}