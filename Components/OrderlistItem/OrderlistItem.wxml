<!--Components/ListItem/ListItem.wxml-->
<view class="wrapper">
  <image class='image-wrapper' src="{{record.house_photo_src}}" mode="widthFix"></image>
  <view class='info-wrapper'>
    <text class="house-name">{{record.house_name}}</text>
    <view>
      <text class='nights'>天数：{{record.nights}}</text>
      <text class='price'>价格：￥{{record.price}}</text>
    </view>
  </view>
</view>

<view class='grayLine'></view>
