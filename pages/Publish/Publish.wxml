<view class='page-wrapper'>
  <view class='row'>
    <text class='name-text'>标题：</text><input placeholder='请输入房屋标题' value="{{house_name}}"/>
  </view>
  
  <view class='row'>
    <text class='name-text'>信息：</text><textarea placeholder='请输入房屋信息' maxlength="-1" value="{{house_info}}"></textarea>
  </view>
  
  <view class='row'>
    <text class='name-text'>城市：</text><button class='city-select' bindtap='navigateToCitySelect'>{{currentLocation}}</button>
  </view>
  
  <view class='row'>
    <text class='name-text'>地址：</text><input placeholder='请输入详细地址' value="{{house_address}}"/>
  </view>
  
  <view class='row'>
  <text class='name-text'>日期：</text>
    <picker mode="date" value="{{BeginDate}}" start="{{BeginDate}}" end="2020-12-31" bindchange="BeginDateChange">
        {{BeginDate}}
    </picker>
    <text class='to'>至</text>
    <picker mode="date" value="{{EndDate}}" start="{{EndDate}}" end="2020-12-31" bindchange="EndDateChange">
      {{EndDate}}
    </picker>
  </view>
  <view class='row'>
    <text class='name-text'>价格：</text> <text class='price-inline-text'>￥ </text><input class='price-input'/> <text class='price-inline-text'> /晚</text>
  </view>
  <button class="publish" bindtap="">确认发布</button>
</view>