page{
  height: 100%;
  background-color: white;
}

.divLine{
  background: white;
  width: 100%;
  height: 3rpx;
}

.top-bar{
  width: 100%;
  height: 80rpx;
  margin-top: -1rpx;
  position: fixed;
  z-index: 10;
}

.top-bar > text,  
.top-bar > picker{
  height: 80rpx;
  font-size: 30rpx;
  display: inline-block;
  text-align: center;
  box-sizing: border-box;
  background-color: #72b990;
  color: white;
  padding-top: 15rpx;
  border-left: 1px solid #72b980;
}

.top-bar > text {
  width: 15%;
  text-align: center;
}
/*取消最左边边框*/
.top-bar > text:nth-child(1) {
  border-left: 0px;
}

.top-bar > picker {
  width: 35%;
  text-align: center;
}

.main-wrapper{
  margin-top: 70rpx;
  height: 100%;
}

swiper{
  width: 100%;
  height: 30%;
}

swiper-item > image{
  width: 100%;
}

/*列容器*/
.outter-container{
  display: flex;
  flex-direction: row;
}

/*每一列*/
.left-column-container{
  display: flex;
  flex-direction: column;
  width: 50%;
  margin-left: 3%;
  margin-right: 2%;
}

.right-column-container{
  display: flex;
  flex-direction: column;
  width: 50%;
  margin-left: 2%;
  margin-right: 3%;
}

house-item{
  width: 100%;
}