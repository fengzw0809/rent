Page{
  width: 100%;
  height: 100%;
  position: fixed;
}

.update-button{
  display: block;
  width: 85%;
  margin: auto;
  color: white;
  background-color: #72b990;
  margin-top: 3%;
  padding: 3% auto;
}

.update-item{
  margin-top: 6%;
  margin-bottom: 6%;
  width: 90%;
  font-size: 30rpx;
  text-align: left;
  margin-left: 25rpx;
  padding-left: 1%;
  padding-right: 1%;
  border-bottom: 1px #E0E3DA solid;
}

.update-item > text {
  width: 150rpx;
  display: inline-block;
  position: relative;
  top: -13rpx;
}

.update-item > input{
  display: inline-block;
  width: 500rpx;
}

.bottomHighlight{
  border-bottom: 1px #72b990 solid;
}