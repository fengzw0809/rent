.divLine{
  background: white;
  width: 100%;
  height: 3rpx;
}

.top-switch-bar{
  width: 100%;
  height: 80rpx;
  margin-top: -1rpx;
  position: fixed;
  z-index: 10;
  background-color: #72b990;
}

.left-switch-bar, .right-switch-bar{
  width: 50%;
  height: 70%;
  display: inline-block;
  text-align: center;
}

.left-switch-bar > text,
.right-switch-bar >text {
  color: white;
  font-size: 32rpx;
  text-align: center;
}

.bottom-white-line{
  background-color: white;
  margin: auto;
  margin-top: 3%;
  width: 50%;
  height: 2px;
}

.main-wrapper{
  margin-top: 10%;
  height: 100%;
  width: 100%;
  position: absolute;
}

.main-wrapper > list-item{
  margin-top: 50px;
}

orderlist-item + text,
published-item + text {
  font-size: 32rpx;
  text-align: center;
  display: block;
  margin-top: 3%;
  margin-bottom: 3%;
  color: #666666;
}